<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	tools:context=".search.SearchActivity">

	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true"
		android:background="@color/blue_04aaef"
		android:minHeight="?attr/actionBarSize"
		app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/mToolBackIv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:background="@drawable/toolbar_back"/>


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_marginRight="34dp"
				android:orientation="horizontal"
				android:layout_marginLeft="34dp"
				android:background="@drawable/search_bg_shape"
				android:layout_centerVertical="true"
				android:paddingLeft="@dimen/dp_10"
				android:paddingTop="@dimen/dp_3"
				android:paddingBottom="@dimen/dp_3"
				android:paddingRight="@dimen/dp_16"
				android:layout_height="28dp">

				<ImageView
					android:background="@drawable/search_input_icon"
					android:layout_width="wrap_content"
					android:layout_centerVertical="true"
					android:layout_height="wrap_content"/>

				<EditText
					android:id="@+id/mSearchTv"
					android:layout_width="wrap_content"
					android:layout_centerVertical="true"
					android:layout_height="wrap_content"
					android:ellipsize="end"
					android:layout_marginLeft="30dp"
					android:maxEms="9"
					android:background="@null"
					android:singleLine="true"
					android:hint="搜索文章/标签/用户"
					android:textColor="#fff"
					android:textSize="13sp"/>

				<ImageView
					android:id="@+id/mSearchCancelIv"
					android:background="@drawable/search_cancel"
					android:layout_alignParentRight="true"
					android:layout_width="22dp"
					android:visibility="gone"
					android:layout_height="22dp"/>
			</RelativeLayout>
		</RelativeLayout>
	</android.support.v7.widget.Toolbar>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/mHotSearchTv"
				android:paddingTop="@dimen/dp_10"
				android:paddingBottom="@dimen/dp_10"
				android:gravity="center"
				android:text="热搜"
				android:background="@color/white"
				android:textSize="@dimen/sp_16"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>

			<com.zhy.view.flowlayout.TagFlowLayout
				android:id="@+id/search_flowlayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="20dp">
			</com.zhy.view.flowlayout.TagFlowLayout>
		</LinearLayout>


		<LinearLayout
			android:visibility="gone"
			android:id="@+id/mSearchHistoryLayout"
			android:background="@color/alpha_half"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:background="@color/white"
				android:layout_marginLeft="60dp"
				android:layout_marginRight="50dp"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:text="历史"
					android:layout_marginTop="@dimen/dp_10"
					android:layout_marginLeft="@dimen/dp_10"
					android:textColor="@color/gray_19191B"
					android:textSize="@dimen/sp_16"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_marginLeft="@dimen/dp_6"
					android:layout_marginRight="@dimen/dp_6"
					android:layout_marginTop="@dimen/dp_6"
					android:background="@color/gray_757575"
					android:layout_width="match_parent"
					android:layout_height="1px"></TextView>

				<android.support.v7.widget.RecyclerView
					android:padding="@dimen/dp_10"
					android:id="@+id/mHistoryRecyclerView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				</android.support.v7.widget.RecyclerView>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/mSearchClearHistoryTv"
						android:textSize="@dimen/sp_14"
						android:text="清除"
						android:layout_margin="@dimen/dp_10"
						android:layout_alignParentRight="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				</RelativeLayout>

			</LinearLayout>
		</LinearLayout>
	</FrameLayout>


</LinearLayout>