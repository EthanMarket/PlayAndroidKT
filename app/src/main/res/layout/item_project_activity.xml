<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_marginBottom="@dimen/dp_2"
	android:paddingTop="@dimen/dp_8"
	android:paddingBottom="@dimen/dp_8"
	android:layout_marginTop="@dimen/dp_2"
	android:paddingLeft="@dimen/dp_2"
	android:background="@color/white"
	android:paddingRight="@dimen/dp_12"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/item_project_iv"
		android:layout_width="0dp"
		android:layout_height="110dp"
		android:layout_weight="2"
		android:src="@mipmap/ic_launcher"/>

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/dp_8"
		android:layout_marginTop="@dimen/dp_10"
		android:layout_weight="5">

		<TextView
			android:id="@+id/item_project_title_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="MVP 组件化 WanAndroid APP"
			android:textColor="@color/gray_434343"
			android:textSize="@dimen/sp_16"/>

		<TextView
			android:id="@+id/item_project_desc_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_4"
			android:layout_marginBottom="@dimen/dp_4"
			android:maxLines="3"
			android:lineSpacingExtra="@dimen/dp_2"
			android:ellipsize="end"
			android:layout_centerInParent="true"
			android:text="基于 wanandroid.com +"
			android:textColor="@color/gray_757575"
			android:textSize="@dimen/sp_12"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			>

			<TextView
				android:id="@+id/item_project_author_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="guofudong"
				android:textColor="@color/gray_19191B"
				android:textSize="@dimen/sp_14"/>

			<TextView
				android:id="@+id/item_project_time_tv"
				android:layout_width="wrap_content"
				android:layout_centerVertical="true"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_10"
				android:layout_toRightOf="@+id/item_project_author_tv"
				android:text="2019-06-19"
				android:textColor="@color/gray_757575"
				android:textSize="@dimen/sp_12"/>

			<ImageView
				android:id="@+id/item_project_like_iv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:background="@drawable/article_collect_unlike_icon"/>

		</RelativeLayout>
	</RelativeLayout>

</LinearLayout>