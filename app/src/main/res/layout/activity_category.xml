<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	tools:context=".category.CategoryActivity">

	<include layout="@layout/default_toolbar"></include>

	<android.support.design.widget.TabLayout
		android:id="@+id/mCategoryTabLayout"
		style="@style/TabLayoutStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#fff"></android.support.design.widget.TabLayout>

	<android.support.v4.view.ViewPager
		android:id="@+id/mCategoryViewpager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</LinearLayout>