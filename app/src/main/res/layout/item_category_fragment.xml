<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:background="@color/white"
	android:layout_marginTop="@dimen/dp_2"
	android:orientation="vertical"
	android:layout_marginBottom="@dimen/dp_2"
	android:paddingLeft="@dimen/dp_10"
	android:paddingRight="@dimen/dp_12"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:layout_marginTop="@dimen/dp_10"
		android:layout_width="match_parent"
		android:layout_height="40dp">

		<ImageView
			android:id="@+id/category_user_photo_iv"
			android:background="@mipmap/ic_launcher"
			android:layout_width="40dp"
			android:layout_height="40dp"/>

		<TextView
			android:id="@+id/category_user_name_tv"
			android:text="用户名"
			android:textSize="@dimen/sp_14"
			android:layout_toRightOf="@+id/category_user_photo_iv"
			android:layout_centerVertical="true"
			android:textColor="@color/gray_19191B"
			android:layout_marginLeft="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/category_user_time_tv"
			android:text="14小时之前"
			android:layout_alignParentRight="true"
			android:textSize="@dimen/sp_12"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/dp_20"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/article_content_tv"
		android:textSize="@dimen/sp_16"
		android:text="使用黑科技启动未注册的Activity"
		android:layout_marginTop="@dimen/dp_6"
		android:layout_marginBottom="@dimen/dp_6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<RelativeLayout
		android:layout_marginBottom="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/article_collect_iv"
			android:src="@drawable/article_collect_unlike_icon"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_marginRight="@dimen/dp_12"
			android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>